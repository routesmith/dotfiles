# This is a templated external config.
# DO NOT `chezmoi add` this â€“ it already lives in the source dir.

# Neovim repo to pull down every so often.
[".config/nvim"]
type = "git-repo"
url = "git@github.com:{{ .github_username }}/nvim.git"
pullArgs = [ "--ff-only" ] # Recommended for clean pulls.
refreshInterval = "2h" # How often chezmoi should check for updates (e.g., "1h", "daily", "never")

# Only grab the ZSH and tmux plugins if not on Windows
{{ if ne .chezmoi.os "windows" }}

# ZSH Plugins
