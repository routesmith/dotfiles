# zsh-async plugin
[".zsh/plugins/zsh-async"]
type = "archive"
url = "https://github.com/mafredri/zsh-async/archive/master.tar.gz"
exact = true
stripComponents = 1
refreshInterval = "672h" # How often chezmoi should check for updates (e.g., "1h", "daily", "never")

